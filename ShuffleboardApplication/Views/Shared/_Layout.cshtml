<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shuffleboard Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <script src="~/Content/bootstrap.css"></script>
</head>
<body style="padding-top: 100px;">
    <nav class="navbar fixed-top navbar-dark" style="background-color: rgb(0, 205, 102); color: white; 20px; padding-bottom:10px; padding-right: 0px; padding-left: 0px; ">
        <a id ="navColor" class="navbar-brand" href="/Home/Index">Shuffleboard Application</a>

       
            <span  id="greenButton"  class = "navbar-toggler" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"><i class="fas fa-bars fa-2x"></i></span>
        
        <div class="collapse navbar-collapse" id="navbarNav" >
            <ul class="navbar-nav">
                
                <li class="nav-item">
                    @Html.ActionLink("Games", "Index", "Game", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Players", "Index", "Player", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Tournaments", "Index", "Tournament", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">

                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - shuffleapp</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("Scripts", required: false)
</body>
</html>
